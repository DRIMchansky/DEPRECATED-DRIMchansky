{
  "name": "parcel-template",
  "version": "0.0.1",
  "description": "start your web project out of box",
  "main": "index.js",
  "scripts": {
    "watch": "parcel src/pages/index.pug ./ --no-cache",
    "build": "parcel build src/pages/index.pug --public-url ./ --out-dir ./prod --no-cache",
    "clear": "rimraf dist/ prod/",
    "lint": "node -e console.clear() && stylelint src/styles/**/*.css"
  },
  "author": "DRIMchansky",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "normalize.css": "^8.0.1",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.3",
    "postcss-custom-properties": "^9.0.2",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.1.2",
    "prettier": "^1.18.2",
    "pug": "^2.0.4",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0"
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  }
}
